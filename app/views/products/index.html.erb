<%- model_class = Products -%>
<div class="page-header">
  <h1><%=t '.title', :default => Products %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:product_id) %></th>
      <th><%= model_class.human_attribute_name(:product_name) %></th>
      <th><%= model_class.human_attribute_name(:product_desc) %></th>
      <th><%= model_class.human_attribute_name(:product_count) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |products| %>
      <tr>
        <td><%= products.id %></td>
        <td><%= products.product_id %></td>
        <td><%= products.product_name %></td>
        <td><%= products.product_desc %></td>
        <td><%= products.product_count %></td>
        <td><%=l products.created_at, format: :long %></td>
        <td>
          <%= link_to products_path(products), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to products_path(products), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_products_path,
            :class => 'btn btn-primary' %>
