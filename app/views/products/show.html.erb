<%- model_class = Products -%>
<div class="page-header">
  <h1><%=t '.title', :default => Products %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:product_id) %></dt>
      <dd><pre class="prettyprint"><%= @products.product_id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:product_name) %></dt>
      <dd><pre class="prettyprint"><%= @products.product_name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:product_desc) %></dt>
      <dd><pre class="prettyprint"><%= @products.product_desc %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:product_count) %></dt>
      <dd><pre class="prettyprint"><%= @products.product_count %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              products_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_products_path(@products), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              products_path(@products),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

